#!/bin/bash
# preinst script for moodle-site-otagounifom
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

case "$1" in
    install)
        CMD="psql"
        db_get moodle-site-otagounifom/db_host
        if [ -n "$RET" ];then
                CMD="$CMD -h$RET"
        fi
        db_get moodle-site-otagounifom/db_port
        if [ -n "$RET" ];then
                CMD="$CMD -p$RET"
        fi
        db_get moodle-site-otagounifom/db_user
        if [ -n "$RET" ];then
                CMD="$CMD -U$RET"
        fi
        db_get moodle-site-otagounifom/db_pass
        if [ -n "$RET" ];then
                export PGPASSWORD="$RET"
        fi
        db_get moodle-site-otagounifom/db_database
        DBNAME="$RET"
        CMD="$CMD $RET"

        # if [ -x /usr/bin/psql ]; then
        #     echo -n "Testing for database connectivity ..."
        #     if ( $CMD -c "SELECT TRUE;" >/dev/null 2>&1 );then
        #         echo " success"
        #     else
        #         echo ""
        #         echo "=========================="
        #         echo "==========FAILED=========="
        #         echo "=========================="
        #         echo "You need to ensure that the database exists and is accessible ..."
        #         echo "The database details should be as follows ..."
        #         db_get moodle-site-otagounifom/db_host
        #         echo "Host: ${RET}"
        #         db_get moodle-site-otagounifom/db_port
        #         echo "Port: ${RET}"
        #         db_get moodle-site-otagounifom/db_user
        #         echo "Username: ${RET}"
        #         db_get moodle-site-otagounifom/db_database
        #         echo "Database name: $RET"
        #         echo ""
        #     fi
        # else
        #     echo "Unable to test database connectivity"
        #     echo " Try installing psql (apt-get install postgres-client) and running:"
        #     db_get moodle-site-otagounifom/db_database
        #     echo "PGPASSWORD=\"$RET\" $CMD"
        # fi

        db_get moodle-site-otagounifom/servername
        if [ -z "$RET" ];then
            echo "You must specify a servername"
            db_reset moodle-site-otagounifom/servername
            exit 1;
        fi
    ;;
    upgrade)
    ;;
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop
exit 0
